<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="温馨提示"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_AddCar_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#777777"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_AddCar_tishiyu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textColor="#999"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_mobile"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll_mobile"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/btn_Sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/view_mobile"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:text="知道了"
            android:textColor="#007be2"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
