<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_monthcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@mipmap/bg_moren_monthcard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_month_hphm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="22dp"/>
                <TextView
                    android:id="@+id/item_month_sysj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="22dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_month_xufei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_monthcard_xufei"
                android:layout_marginTop="18dp"
                android:layout_marginRight="22dp"
                android:text="续费"
                android:textSize="16sp"
                android:textColor="#fff"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_month_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="22dp"
            android:textSize="13sp"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>
