<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/jinru" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加发票"
            android:textColor="#333"
            android:textSize="16sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抬头类型"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/btn_fapiao_qiye"
                        android:layout_width="153dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="16dp"
                        android:button="@null"
                        android:background="@mipmap/bg_lvse_kuang"
                        android:gravity="center"
                        android:text="企业发票"
                        android:textSize="14sp"
                        android:textColor="#29c08b"/>
                    <RadioButton
                        android:id="@+id/btn_fapiao_geren"
                        android:layout_width="153dp"
                        android:layout_height="46dp"
                        android:button="@null"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:background="@mipmap/bg_huise_kuang"
                        android:text="个人/非企业发票"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fff"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票详情"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#E7E7E7"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="发票抬头"
                        android:textSize="14sp"
                        android:textColor="#777"/>
                    <EditText
                        android:id="@+id/et_fapiao_taitou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:text=""
                        android:hint="请输入发票抬头"
                        android:layout_marginLeft="24dp"
                        android:textColorHint="#c9c9c9"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>
                <View
                    android:id="@+id/view_fapiao_xian"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#e7e7e7"/>
                <LinearLayout
                    android:id="@+id/ll_fapiao_shuihao"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="税号"
                        android:textSize="14sp"
                        android:textColor="#777"/>
                    <EditText
                        android:id="@+id/et_fapiao_shuihao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="30"
                        android:text=""
                        android:hint="请输入纳税人识别号"
                        android:layout_marginLeft="52dp"
                        android:textColorHint="#c9c9c9"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#e7e7e7"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="发票内容"
                        android:textSize="14sp"
                        android:textColor="#777"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="停车费"
                        android:layout_marginLeft="24dp"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#e7e7e7"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="开票金额"
                        android:textSize="14sp"
                        android:textColor="#777"/>
                    <EditText
                        android:id="@+id/et_fapiao_zje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="8"
                        android:text=""
                        android:hint="可开票额度￥0.00"
                        android:layout_marginLeft="24dp"
                        android:textColorHint="#c9c9c9"
                        android:textSize="14sp"
                        android:textColor="#333"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#e7e7e7"/>
                <LinearLayout
                    android:id="@+id/ll_fapiao_more"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="更多信息"
                        android:textSize="14sp"
                        android:textColor="#777"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="22"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:text="填写备注、开户银行等"
                        android:layout_marginLeft="24dp"
                        android:textSize="14sp"
                        android:textColor="#c9c9c9"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/right_xh" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子发票预计在1-2个工作日内发到您的邮箱"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="联系电话"
                    android:textSize="14sp"
                    android:textColor="#777"/>
                <EditText
                    android:id="@+id/et_fapiao_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text=""
                    android:hint="请输入联系电话"
                    android:layout_marginLeft="24dp"
                    android:textColorHint="#c9c9c9"
                    android:textSize="14sp"
                    android:textColor="#333"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e7e7e7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="电子邮件"
                    android:textSize="14sp"
                    android:textColor="#777"/>
                <EditText
                    android:id="@+id/et_fapiao_youjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:text=""
                    android:hint="请输入常用电子邮箱"
                    android:layout_marginLeft="24dp"
                    android:textColorHint="#c9c9c9"
                    android:textSize="14sp"
                    android:textColor="#333"/>
            </LinearLayout>
            <Button
                android:layout_marginTop="35dp"
                android:layout_marginBottom="28dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="提交"
                android:textColor="#fff"
                android:background="@mipmap/btn_yuan"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
