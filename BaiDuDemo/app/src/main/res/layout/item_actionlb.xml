<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_lv_actionlb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_moren"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_yuanjiao_kuang2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/tv_hd_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动标题"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="#333"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="11dp">
            <TextView
                android:id="@+id/tv_hd_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2018年1月15日10:36:34"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="#999"/>
            <ImageView
                android:id="@+id/iv_hd_no_gq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_xh"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_hd_gq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_hd_gq"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
