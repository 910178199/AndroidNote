<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="#eFeFeF"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinru"/>
        </RelativeLayout>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textSize="16sp"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/tv_youhui_shuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="使用说明"
            android:textColor="#333"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="0.5dp"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/bg_et_shurukuang"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/et_youhuiq_shuru"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="点击输入兑换码"
                android:imeOptions="actionDone"
                android:maxLength="16"
                android:textColor="#333"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_youhuiq_duihuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="兑换"
            android:layout_gravity="center"
            android:background="@mipmap/bg_btn_duihuan"
            android:layout_marginRight="16dp"
            android:textColor="#fff"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_no_ditu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="144dp"
            android:src="@mipmap/bg_no_quan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="暂无优惠券"
            android:textColor="#777"
            android:textSize="14sp"/>
    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_youhui"
        android:divider="@null"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent" />
</LinearLayout>
