<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:drawable="@color/popwindow_header" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
    </item>


    <!-- focus -->
    <item android:drawable="@color/popwindow_header" android:state_focused="true">
        <shape>
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
    </item>

</selector>