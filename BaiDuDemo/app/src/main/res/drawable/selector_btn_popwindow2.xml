<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true" android:drawable="@color/popwindow_header"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape></item>

    
    
    <!-- focus -->
    <item android:state_focused="true" android:drawable="@color/popwindow_header"><shape>
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape></item>
        
    
    
    <item><shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape></item>

</selector>